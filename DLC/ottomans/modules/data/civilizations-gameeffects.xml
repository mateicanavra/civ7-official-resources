<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!-- ==================================================	-->
	<!--				Civ-Specific Traits					-->
	<!-- ==================================================	-->
	<!-- OTTOMANS -->
	<Modifier id="MOD_CIV_OTTOMAN_ARTIFACTS" collection="COLLECTION_OWNER" effect="EFFECT_ADJUST_PLAYER_ADDITIONAL_ARTIFACTS_IN_TERRITORY">
		<Argument name="Amount">1</Argument>
	</Modifier>
	<Modifier id="MOD_CIV_OTTOMAN_COMBAT" collection="COLLECTION_PLAYER_UNITS" effect="EFFECT_ATTACH_MODIFIERS">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_UNIT_TAG_MATCHES">
				<Argument name="Tag">UNIT_CLASS_INFANTRY, UNIT_CLASS_SIEGE</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="ModifierId">MOD_CIV_OTTOMAN_COMBAT_MODIFIER</Argument>
	</Modifier>
	<Modifier id="MOD_CIV_OTTOMAN_COMBAT_MODIFIER" collection="COLLECTION_UNIT_COMBAT" effect="EFFECT_ADJUST_UNIT_STRENGTH_MODIFIER">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLAYER_IS_ATTACKING"/>
		</SubjectRequirements>
		<Argument name="Amount">3</Argument>
		<String context="Preview">LOC_TRAIT_OTTOMANS_ABILITY_PREVIEW</String>
	</Modifier>
	<!-- ==================================================	-->
	<!--				Civ-Specific Trees					-->
	<!-- ==================================================	-->
	<Modifier id="MOD_REVEAL_CIV_CULTURE_TREE_OTTOMANS" collection="COLLECTION_OWNER" effect="EFFECT_PLAYER_REVEAL_CULTURE_TREE">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLAYER_HAS_CIVILIZATION_OR_LEADER_TRAIT">
				<Argument name="TraitType">TRAIT_OTTOMANS</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="ProgressionTreeType">TREE_CIVICS_MO_OTTOMANS</Argument>
	</Modifier>
	<!-- ==================================================	-->
	<!--				Wonder Bonuses						-->
	<!-- ==================================================	-->
	<Modifier id="MOD_CIV_WONDER_PRODUCTION_OTTOMANS" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_FAVORED_WONDER_PRODUCTION">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLAYER_HAS_CIVILIZATION_OR_LEADER_TRAIT">
				<Argument name="TraitType">TRAIT_OTTOMANS</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="Percent">30</Argument>
		<String context="Preview">LOC_MOD_CIV_WONDER_PRODUCTION_OTTOMANS_DESCRIPTION</String>
	</Modifier>
</GameEffects>