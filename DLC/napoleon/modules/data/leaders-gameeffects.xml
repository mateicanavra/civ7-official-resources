<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!-- ==================================================	-->
	<!-- Napoleon, Emperor -->
	<!-- ==================================================	-->
	<Modifier id="NAPOLEON_MOD_ULOCK_ALL_SANCTIONS" collection="COLLECTION_OWNER" effect="EFFECT_DIPLOMACY_GRANT_DIPLOMATIC_ACTION">
		<Argument name="ActionType">DIPLOMACY_ACTION_SABOTAGE_TREASURY, DIPLOMACY_ACTION_SABOTAGE_MORALE, DIPLOMACY_ACTION_SABOTAGE_RESEARCH, DIPLOMACY_ACTION_SABOTAGE_CIVIC_STUDY, DIPLOMACY_ACTION_SABOTAGE_MILITARY_PRODUCTION, DIPLOMACY_ACTION_SABOTAGE_FOOD_PRODUCTION</Argument>
	</Modifier>
	<Modifier id="NAPOLEON_MOD_LOWER_COST_SANCTIONS" collection="COLLECTION_OWNER" effect="EFFECT_DIPLOMACY_ADJUST_DIPLOMATIC_ACTION_TYPE_EFFICIENCY">
		<Argument name="Percent">50</Argument>
		<Argument name="ActionGroupType">DIPLOMACY_ACTION_GROUP_SANCTION</Argument>
	</Modifier>
	<Modifier id="NAPOLEON_MOD_CULTURE_PER_SANCTIONED_PLAYER" collection="COLLECTION_OWNER" effect="EFFECT_DIPLOMACY_ADJUST_YIELD_PER_SANCTIONED_PLAYER">
		<Argument name="YieldType">YIELD_CULTURE</Argument>
		<Argument name="Amount" type="ScaleByGameAge" extra="100">5</Argument>
	</Modifier>
	<Modifier id="NAPOLEON_MOD_GOLD_PER_SANCTIONED_PLAYER" collection="COLLECTION_OWNER" effect="EFFECT_DIPLOMACY_ADJUST_YIELD_PER_SANCTIONED_PLAYER">
		<Argument name="YieldType">YIELD_GOLD</Argument>
		<Argument name="Amount" type="ScaleByGameAge" extra="100">5</Argument>
	</Modifier>
	<Modifier id="NAPOLEON_MOD_COMBAT_STRENGTH_PER_ACTIVE_SANCTION" collection="COLLECTION_PLAYER_UNITS" effect="EFFECT_ADJUST_UNIT_ACTIVE_DIPLOMACY_GROUP_COMBAT_STRENGTH">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_UNIT_DOMAIN_MATCHES">
				<Argument name="UnitDomain">DOMAIN_LAND</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="Amount">1</Argument>
		<Argument name="DiplomacyActionGroups">DIPLOMACY_ACTION_GROUP_SANCTION</Argument>
	</Modifier>
	<Modifier id="NAPOLEON_MOD_AGENDA_NAPOLEONIC_CODE" collection="COLLECTION_OWNER" effect="EFFECT_DIPLOMACY_AGENDA_TIMED_UPDATE">
		<String context="Name">LOC_DIPLOMACY_AGENDA_NAPOLEONIC_CODE_NAME</String>
		<Argument name="ModName">LOC_DIPLOMACY_AGENDA_NAPOLEONIC_CODE_NAME</Argument>
		<Argument name="Tooltip">LOC_DIPLOMACY_AGENDA_NAPOLEONIC_CODE_DESC</Argument>
		<Argument name="WeightType">DIPLOMACY_AGENDA_COMPARE_NAPOLEONIC_CODE</Argument>
		<Argument name="FirstMeetDelay">20</Argument>
		<Argument name="UpdateFreq">10</Argument>
		<Argument name="AwardTo1">DIPLOMACY_AGENDA_AWARD_LOWEST</Argument>
		<Argument name="AwardAmtType1">DIPLOMACY_AGENDA_AMT_MEDIUM</Argument>
		<Argument name="Arg1">DOMAIN_LAND</Argument>
		<Argument name="AwardTo2">DIPLOMACY_AGENDA_AWARD_HIGHEST</Argument>
		<Argument name="AwardAmtType2">DIPLOMACY_AGENDA_NEG_AMT_MEDIUM</Argument>
		<Argument name="Arg2">DOMAIN_SEA</Argument>
		<Argument name="NotifyMessage">LOC_NOTIFICATION_DIPLOMATIC_AGENDA_DEFAULT_MESSAGE</Argument>
		<Argument name="NotifySummary">LOC_NOTIFICATION_DIPLOMATIC_AGENDA_DEFAULT_SUMMARY</Argument>
	</Modifier>
</GameEffects>
