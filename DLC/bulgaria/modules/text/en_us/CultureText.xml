<Database>
	<EnglishText>

		<!-- ==================================================	-->
		<!--	BULGARIA							-->
		<!-- ==================================================	-->
		<Row Tag="LOC_TREE_CIVICS_EX_BULGARIA_NAME">
			<Text>Bulgaria Civics</Text>
		</Row>
		<Row Tag="LOC_CIVIC_SEVEN_TRIBES_NAME">
			<Text>Seven Tribes</Text>
		</Row>
		<Row Tag="LOC_CIVIC_SEVEN_TRIBES_QUOTE">
			<Text>"As previously reported, the Bulgars annihilated all of their foes."</Text>
		</Row>
		<Row Tag="LOC_CIVIC_SEVEN_TRIBES_AUTHOR">
			<Text>The Laws of Khan Krum</Text>
		</Row>
		<Row Tag="LOC_CIVIC_TARNOVO_SCHOOLS_NAME">
			<Text>Tarnovo Schools</Text>
		</Row>
		<Row Tag="LOC_CIVIC_TARNOVO_SCHOOLS_QUOTE">
			<Text>"Demons fear these relics and dare not approach their bless-ed contents."</Text>
		</Row>
		<Row Tag="LOC_CIVIC_TARNOVO_SCHOOLS_AUTHOR">
			<Text>Presbyter Kosmas</Text>
		</Row>
		<Row Tag="LOC_CIVIC_TSARSTVIE_NAME">
			<Text>Tsarstvie</Text>
		</Row>
		<Row Tag="LOC_CIVIC_TSARSTVIE_QUOTE">
			<Text>"Like the morning star, you appeared to us and dispelled the shadow of the enemy."</Text>
		</Row>
		<Row Tag="LOC_CIVIC_TSARSTVIE_AUTHOR">
			<Text>Eulogy for Peter I</Text>
		</Row>
		<!--Bulgaria Civic Description-->
		<Row Tag="LOC_MOD_SEVEN_TRIBES_GREATWORKS_COMBAT_DESCRIPTION">
			<Text>+5 [icon:NAR_REW_COMBAT] Combat Strength for all Military Units when you have at least 5 [icon:NAR_REW_GREATWORK] Relics on display.</Text>
		</Row>
		<Row Tag="LOC_SEVEN_TRIBES_GREATWORKS_COMBAT_PREVIEW">
			<Text>+{1_Amount} Seven Tribes</Text>
		</Row>
		<Row Tag="LOC_MOD_TARNOVO_SCHOOLS_TEMPLE_HAPPINESS_HIDDEN_FORTRESS_DESCRIPTION">
			<Text>+2 [icon:YIELD_HAPPINESS] Happiness on Hidden Fortresses in Settlements with a Temple.</Text>
		</Row>
		<Row Tag="LOC_MOD_TSARSTVIE_TWO_MIGRANTS_DESCRIPTION">
			<Text>Receive 2 [icon:UNIT_MIGRANT] Migrants in the [icon:NOTIFICATION_SELECT_CAPITAL] Capital.</Text>
		</Row>
		<Row Tag="LOC_MOD_TSARSTVIE_CULTURE_MOUNTAIN_HIDDEN_FORTRESS_DESCRIPTION">
			<Text>+2 [icon:YIELD_CULTURE] Culture on Hidden Fortresses for each adjacent Mountain tile.</Text>
		</Row>
		<!--Bulgaria Unique Traditions-->
		<Row Tag="LOC_TRADITION_FALSE_RETREAT_NAME">
			<Text>False Retreat</Text>
		</Row>
		<Row Tag="LOC_TRADITION_FALSE_RETREAT_DESCRIPTION">
			<Text>[icon:Action_Pillage] Pillaging Improvements grants [icon:YIELD_FOOD] Food in all [icon:YIELD_TOWNS] Towns equal to 50% of the yield or [icon:Action_Heal] HP gained. -3 [icon:NAR_REW_COMBAT] Combat Strength for all Military Units against [icon:CITY_FORTIFIED] Fortified Districts.</Text>
		</Row>
		<Row Tag="LOC_TRADITION_FALSE_RETREAT_PREVIEW">
			<Text>{1_CombatAmount} False Retreat</Text>
		</Row>
		<Row Tag="LOC_TRADITION_ICONOLATRY_NAME">
			<Text>Iconolatry</Text>
		</Row>
		<Row Tag="LOC_TRADITION_ICONOLATRY_DESCRIPTION">
			<Text>+1 [icon:YIELD_HAPPINESS] Happiness and [icon:YIELD_GOLD] Gold from [icon:NAR_REW_GREATWORK] Great Works.</Text>
		</Row>
		<Row Tag="LOC_TRADITION_STRATAGEMS_NAME">
			<Text>Stratagems</Text>
		</Row>
		<Row Tag="LOC_TRADITION_STRATAGEMS_DESCRIPTION">
			<Text>+50% yields and [icon:Action_Heal] HP from [icon:Action_Pillage] Pillaging.</Text>
		</Row>
	</EnglishText>
</Database>