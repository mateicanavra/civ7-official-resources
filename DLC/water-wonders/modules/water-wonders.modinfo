				</UpdateDatabase>
				<UpdateText>
					<Item>text/en_us/CivilopediaExplorationText.xml</Item>
					<Item>text/en_us/ConstructibleExplorationText.xml</Item>
				</UpdateText>
			</Actions>
		</ActionGroup>
		<ActionGroup id="exploration-age-current-asia-wonders" scope="game" criteria="exploration-age-current">
			<Actions>
				<UpdateArt>
					<Item>water-wonders</Item>
				</UpdateArt>
				<UpdateDatabase>
					<Item>data/progression-trees-exploration.xml</Item>
