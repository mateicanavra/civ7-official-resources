<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!-- ==================================================	-->
	<!--	Generic Modifiers							-->
	<!-- ==================================================	-->
	<Modifier id="TRAIT_MOD_PENALTY_OVER_SETTLEMENT_CAP_SETTLEMENTS" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_YIELDS_PER_SETTLEMENT_OVER_CAP">
		<OwnerRequirements>
			<Requirement type="REQUIREMENT_PLAYER_OVER_SETTLEMENT_CAP"/>
		</OwnerRequirements>
		<Argument name="YieldTypes">YIELD_HAPPINESS</Argument>
		<Argument name="Amount">5</Argument>
		<Argument name="ScaleByAge">false</Argument>
		<Argument name="MaxReduction">35</Argument>
	</Modifier>
	<Modifier id="TRAIT_MOD_NEGATIVE_INFLUENCE_CONQUERED_SETTLEMENTS" collection="COLLECTION_OWNER" effect="EFFECT_PLAYER_ADJUST_YIELD_PER_CONQUERED_CITY">
		<Argument name="YieldType">YIELD_DIPLOMACY</Argument>
		<Argument name="Amount" type="ScaleByGameAge" extra="100">-2</Argument>
		<Argument name="Tooltip">LOC_TRAIT_MOD_NEGATIVE_INFLUENCE_CONQUERED_SETTLEMENTS</Argument>
	</Modifier>
	<Modifier id="TRAIT_MOD_NEGATIVE_INFLUENCE_RAZED_SETTLEMENTS" collection="COLLECTION_OWNER" effect="EFFECT_PLAYER_ADJUST_YIELD_PER_RAZED_SETTLEMENT">
		<Argument name="YieldType">YIELD_DIPLOMACY</Argument>
		<Argument name="Amount" type="ScaleByGameAge" extra="100">-2</Argument>
		<Argument name="Tooltip">LOC_TRAIT_MOD_NEGATIVE_INFLUENCE_RAZED_SETTLEMENTS</Argument>
	</Modifier>
	<Modifier id="TRAIT_COMBAT_FLANKING" collection="COLLECTION_OWNER" effect="EFFECT_GRANT_COMBAT_ADJACENCY" run-once="true" permanent="true">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_GAME_IS_STARTED"/>
		</SubjectRequirements>
		<Argument name="Enable">true</Argument>
	</Modifier>
	<Modifier id="TRAIT_MOD_TOWN_FARMING_PROJECT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_UNLOCK_PROJECT">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement type="REQUIREMENT_PLOT_IS_COASTAL_LAND" inverse="true">
			</Requirement>
		</SubjectRequirements>
		<Argument name="ProjectType">PROJECT_TOWN_GRANARY</Argument>
	</Modifier>
	<Modifier id="TRAIT_MOD_TOWN_FISHING_PROJECT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_UNLOCK_PROJECT">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement type="REQUIREMENT_PLOT_IS_COASTAL_LAND">
			</Requirement>
		</SubjectRequirements>
		<Argument name="ProjectType">PROJECT_TOWN_FISHING</Argument>
	</Modifier>
	<Modifier id="TRAIT_MOD_TOWN_URBAN_CENTER_PROJECT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_UNLOCK_PROJECT">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement type="REQUIREMENT_CITY_POPULATION">
				<Argument name="MinUrbanPopulation">8</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="ProjectType">PROJECT_TOWN_URBAN_CENTER</Argument>
	</Modifier>
	<Modifier id="TRAIT_MOD_TOWN_GROWTH_PROJECT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_GROWTH">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement type="REQUIREMENT_CITY_HAS_PROJECT" inverse="true">
				<Argument name="HasAnyProject">true</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="Percent">50</Argument>
	</Modifier>
</GameEffects>